<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">

    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">edit_notification_form.edit_notification_form_data_source</item>
            <item name="deps" xsi:type="string">edit_notification_form.edit_notification_form_data_source</item>
        </item>

        <item name="label" xsi:type="string" translate="true">Notification Information</item>

        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">edit_notification_form</item>
        </item>

        <item name="template" xsi:type="string">templates/form/collapsible</item>

        <!--<item name="layout" xsi:type="array">
              <item name="type" xsi:type="string">tabs</item>
        </item>-->

        <item name="buttons" xsi:type="array">
            <item name="save" xsi:type="string">Magenest\PromoNotification\Block\Adminhtml\Notification\Edit\SaveButton</item>
            <item name="back" xsi:type="array">
                <item name="name" xsi:type="string">back</item>
                <item name="label" xsi:type="string" translate="true">Back</item>
                <item name="class" xsi:type="string">back</item>
                <item name="url" xsi:type="string">*/*/</item>
            </item>
        </item>

    </argument>


    <dataSource name="edit_notification_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Magenest\PromoNotification\Model\Notification\DataProvider</argument>
            <argument name="name" xsi:type="string">edit_notification_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
                <item name="submit_url" path="*/*/save" xsi:type="url"/>
            </item>
        </argument>
    </dataSource>

    <fieldset name="notification_details">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">false</item>
                <item name="label" xsi:type="string" translate="true">Notification Details</item>
                <item name="sortOrder" xsi:type="number">20</item>
            </item>
        </argument>

        <field name="name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Notification Name</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">promo_notification</item>
                    <item name="dataScope" xsi:type="string">name</item>
                </item>
            </argument>

            <settings>
                <required>true</required>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>

        <field name="status">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magenest\PromoNotification\Model\Notification\Source\Status</item>

                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Status</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">promo_notification</item>
                    <item name="dataScope" xsi:type="string">status</item>
                </item>
            </argument>
        </field>

        <field name="short_description">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Short Description</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">promo_notification</item>
                    <item name="dataScope" xsi:type="string">short_description</item>
                </item>
            </argument>
        </field>

        <field name="redirect_url">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Redirect Url</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">promo_notification</item>
                    <item name="dataScope" xsi:type="string">redirect_url</item>
                </item>
            </argument>
        </field>

    </fieldset>
</form>