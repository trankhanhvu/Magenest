<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>

            <resource id="Magento_Backend::admin">

                <resource id="Magento_Backend::stores">

                    <resource id="Magento_Backend::stores_settings">

                        <resource id="Magento_Config::config">

                            <resource id="Magenest_Movie::config_movie" title="Movie Section"/>

                        </resource>

                    </resource>

                </resource>


                <resource id="Magenest_Movie::movie" title="Movie">

                    <resource id="Magenest_Movie::movieinfo" title="Movie Information" >

                        <resource id="Magenest_Movie::movielist" title="Movie" />

                        <resource id="Magenest_Movie::actorlist" title="Actor" />

                        <resource id="Magenest_Movie::directorlist" title="Director" />

                    </resource>

                </resource>

            </resource>

        </resources>
    </acl>
</config>