                        <div class="box-content" style="display: none;"></div>
                        <div class="widget-image-container" style="position:relative;">
                            <div class="widget-instagram-action">
                                <span class="widget-instagram-heart"><i class="fas fa-heart"></i><span class="count" id="heart"></span></span>
                                <span class="widget-instagram-comment"><i class="fas fa-comment"></i><span class="count" id="comment"></span></span>
                            </div>
                            <img class="widget-detail-image" id="widget-instagram-image-url" src="">
                            <div id="hotspot-section" class="hotspot-section"></div>
                        </div>
                    </div>
                    <div class="widget-detail-right">
                        <a id="widget-detail-branding" style="display: block !important;"
                           href="https://store.magenest.com/" target="_blank"><span class="powered-by">Powered by</span>
                            MAGENEST</a>
                        <div class="widget-detail-nav-bar-arrows">
                            <div class="widget-detail-nav-button" id="widget-prev-post">
                                <svg width="30" height="30" xmlns="http://www.w3.org/2000/svg"
                                     xmlns:svg="http://www.w3.org/2000/svg">
                                    <g>
                                        <path class="widget-arrow" fill="none" stroke-width="1px"
                                              d="m22.5,0l-15,15l15,15" id="widget-left-path" stroke="#222"></path>
                                    </g>
                                </svg>
                            </div>
                            <div class="widget-detail-nav-button" id="widget-next-post">
                                <svg width="30" height="30" xmlns="http://www.w3.org/2000/svg"
                                     xmlns:svg="http://www.w3.org/2000/svg">
                                    <g>
                                        <path class="widget-arrow" stroke="#222" id="widget-left-path"
                                              d="m7.5,0l15,15l-15,15" fill="none"></path>
                                    </g>
                                </svg>
                            </div>
                            <div class="widget-detail-nav-bar-close">
                                <div class="widget-detail-nav-button" id="widget-detail-close">
                                    <svg width="30" height="30" xmlns="http://www.w3.org/2000/svg"
                                         xmlns:svg="http://www.w3.org/2000/svg">
                                        <g id="layer1" stroke="#222" class="widget-arrow" stroke-width="1px"
                                           fill="none">
                                            <path d="m0,0l30,30"></path>
                                            <path d="m30,0l-30,30"></path>
                                        </g>
                                    </svg>
                                </div>
                            </div>
                            <div style="clear:both;"></div>
                        </div>
                        <div class="widget-products-title widget-single-product"></div>
                        <div class="featured-products" style="display: none;">
                            <span>FEATURED PRODUCTS</span>
                        </div>
                        <div class="widget-text-link-container"></div>
                        <div class="widget-divider"></div>
                        <div style="clear:both;"></div>
                        <div class="widget-detail-title"></div>
                        <div class="widget-post-info">
                            <a href="" target="_blank" id="widget-instagram-url">
                                <span class="widget-service-username">INSTAGRAM // </span><span
                                        class="widget-service-username" id="created_at_instagram"></span>
                            </a>
                        </div>
                        <div class="widget-detail-shares" style="display: none;">
                            <a class="widget-share widget-facebook-share" href="" target="_blank">
                                <i class="widget-icon widget-fa-facebook"></i>
                            </a>
                            <a class="widget-share widget-mail-share" href="" target="_blank">
                                <i class="widget-icon widget-fa-envelope_alt"></i>
                            </a>
                            <a class="widget-share widget-link-share widget-twitter-share" target="_blank" href="">
                                <i class="widget-icon widget-fa-twitter"></i>
                            </a>
                            <a class="widget-share widget-link-share widget-pinterest-share" href="" target="_blank"
                               data-pin-do="buttonPin"
                               data-pin-config="above">
                                <i class="widget-icon widget-fa-pinterest"></i>
                            </a>
                            <a class="widget-share widget-link-share widget-copied-link" href="" id="link_copy_link">
                                <div class="tooltip">
                                    <span class="tooltiptext" id="copy_tooltip">Copy to clipboard</span>
                                    <i class="widget-icon widget-fa-link"></i>
                                </div>
                            </a>
                            <script type="text/javascript">
                                require(['jquery'], function ($) {
                                    $('a#link_copy_link').on('click', function (e) {
                                        e.preventDefault();
                                        var inpuCopyElement = $('input#input_copy_link');
                                        if (inpuCopyElement.length === 0) {
                                            $('<input>').attr({
                                                type: 'text',
                                                id: 'input_copy_link',
                                                style: 'display: none'
                                            }).appendTo('body')
                                        }

                                        inpuCopyElement.val(window.location.href).show().select();
                                        document.execCommand("copy");
                                        inpuCopyElement.hide();
                                        $('span#copy_tooltip').html('Link copied');
                                        setTimeout(function () {
                                            $('span#copy_tooltip').html('Copy to clipboard');
                                        }, 1000);
                                    })
                                });
                            </script>
                        </div>
                    </div>
                </div>

                <div class="widget-buy-container widget-unslid"></div>
            </div>
        </div>
