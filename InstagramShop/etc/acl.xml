<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magenest_InstagramShop::instagramshop" title="Instagram Shop" sortOrder="100">
                    <resource id="Magenest_InstagramShop::instagram" title="Instagram Photo"/>
                    <resource id="Magenest_InstagramShop::tag" title="Instagram Tagged Photo"/>
                    <resource id="Magenest_InstagramShop::reports" title="Reports"/>
                    <resource id="Magenest_InstagramShop::hotspots" title="Hotspots"/>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Magenest_InstagramShop::config_instagramshop" title="Instagram Setting Section"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>